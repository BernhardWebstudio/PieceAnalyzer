<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %} -  Piece Analyzer</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    {% block body %}
        {{ knp_menu_render('main') }}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="callout {{type}}">{{message}}</div>
            {% endfor %}
        {% endfor %}
        {% block content %}
        {% endblock %}
    {% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
